# HTTP site served on localhost. If you have a domain, replace :80 with your domain
# (e.g., example.com) and expose 443 in docker-compose to get automatic HTTPS.
:80 {
  # Reverse proxy all requests to the Next.js app service in docker-compose
  reverse_proxy nextjs:3000

  # Optional: serve static files directly if desired
  # root * /srv
  # file_server
}
